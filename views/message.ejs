<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ping Yao Wu's Website</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="messageStyle.css" />
  </head>
  <body>
    <%- include("./Partials/navbar.ejs") %>

    <div class="card-container message-container">
      <% messages.forEach(element => {%>
      <div class="card message-card">
        <div class="card-body message-content">
          <h5 class="card-title"><%= element.name %></h5>
          <p class="card-text message"><%= element.message %></p>
          <br />
          <div>
            <p class="card-text contact">電話：<%= element.phone %></p>
            <p class="card-text contact">郵件：<%= element.email %></p>
            <p class="card-text time">
              日期：<%= element.date %>
              <br />
              時間：<%= element.time %>
            </p>
          </div>

          <button
            type="checkbox"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal1"
          >
            詳細內容
          </button>
        </div>
      </div>
      <%}); %>
    </div>

    <%- include("./Partials/footer.ejs") %>
  </body>
</html>
